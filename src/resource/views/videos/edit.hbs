<div class="mt-4 mb-4">
    <h3>Cập nhập video</h3>
    <form class="mt-4" method="POST" action="/videos/{{video._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" value="{{video.name}}" id="name" name="name"> 
        </div>
        <div class="form-group">
            <label for="videoId">VideoId</label>
            <input type="text" class="form-control" value="{{video.videoId}}" id="videoId" name="videoId"> 
        </div>
        <div class="form-group">
            <label for="image">Image</label>
            <input type="text" class="form-control" value="{{video.image}}" id="image" name="image"> 
        </div>
        <div class="form-group">
            <label for="discription">Discription</label>
            <textarea class="form-control" id="discription" name="discription" rows="8" >
                {{video.discription}}
            </textarea>
        </div>
        <button type="submit" class="btn btn-primary">Lưu video</button>
    </form>
</div>

